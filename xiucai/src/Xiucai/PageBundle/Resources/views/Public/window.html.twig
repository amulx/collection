{% if memberId is empty %}
<!--登录弹层-->
<div class="login1_main" id="login_div" style="display: none; position:fixed;left:35%;top:25%; margin: 0 auto;z-index: 1200; background: #FFFFFF;" >
    <div class="login1_close">
        <span id="close_login" style="cursor: pointer;"><img src="{{ asset('assets/img/login1_close.jpg') }}"></span>
    </div>

    <div class="login1_area login_layer">
        <div class="login1_hint"></div>
        <div class="login1_title">登录</div>
        <div class="login1_email">
            <input type="text" name="_username" class="input email" placeholder="邮箱" value="{% if username is not empty %}{{ username }}{% endif %}">
        </div>
        <div class="login1_psss">
            <input type="password" name="_password" id="_password" class="input password" placeholder="密码">
        </div>
        <div class="login1_box">
            <span><a href="javascript:;" class="find_pass_pop">忘记密码?</a></span>
            <input type="checkbox" id="remember" name="remember" value="remember" checked="checked">记住我
        </div>
        <div class="login1_bt">
            <a href="javascript:;">
                <img style="margin-left: 135px; display: none;" src="{{ asset('assets/img/loading.gif') }}" width="50px" height="50px">
                <input type="hidden" id="callback" name="callback" value="">
                <button class="btn_sub" style="width:330px;height: 40px;">登录</button>
            </a>
        </div>
