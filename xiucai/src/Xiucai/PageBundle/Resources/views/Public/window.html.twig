<!--注册激活弹层-->
<div class="login1_main" id="feed_back_div"  style="display: none; position:fixed;left:35%;top:25%; margin: 0 auto;z-index: 1200; background: #FFFFFF;">
    <div class="login1_close">
        <span id="close_feed_back" style="cursor: pointer;"><img src="{{ asset('assets/img/login1_close.jpg') }}"></span>
    </div>
    <div class="login1_area">
        <div class="login1_hint">
        </div>
        <div class="login1_title">注册账号激活</div>
        <div class="content">
            <div class="content_con">
                <img src="{{ asset('assets/img/log_out.png') }}"/>
