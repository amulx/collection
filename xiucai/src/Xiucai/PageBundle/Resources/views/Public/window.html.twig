            <input type="text" name="email" class="input email" placeholder="邮箱">
        </div>
        <div class="login1_code">
            <input type="text" name="username" class="input username" placeholder="你的昵称">
        </div>
        <div class="login1_psss">
            <input type="password" name="password" id="password" class="input pass" placeholder="输入密码">
        </div>
        <div class="login1_psss">
            <input type="password" name="review_pass" id="review_pass" class="input pass review_pass" placeholder="重复密码">
        </div>
