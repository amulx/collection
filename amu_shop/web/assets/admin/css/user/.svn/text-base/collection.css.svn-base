
.fristCon{
    width:1040px;
    overflow:hidden;
    min-height:380px;
    float:left;
}
.fristCon ul{
    overflow:hidden;
}
.fristCon ul li{
    display: inline-block;
    float:left;
    width:312px;
    *width:310px !important;
    height:295px;
    border-radius:4px;
    border:#EBEBEB solid 1px;
    margin:10px;

}
.fristCon ul li .imgEg{
    width:310px;
    height:225px;
    overflow:hidden;
    border-radius:4px;
    background:#F9F9F9;
}
.fristCon ul li .imgEg img{
    display:block;
    width:310px;
    transition:all 0.3s ease 0s;
    -webkit-transition:all 0.3s ease 0s;;
    -moz-transition:all 0.3s ease 0s;;
    -ms-transition:all 0.3s ease 0s;;
    -o-transition:all 0.3s ease 0s;;
}
.fristCon ul li .imgEg:hover img{
    transform:scale(1.2);
    -webkit-transform:scale(1.2);
    -moz-transform:scale(1.2);
    -ms-transform:scale(1.2);
    -o-transform:scale(1.2);
}
.fristCon ul li .imgInfo{
    width:290px;
    margin:0px auto;
    height:65px;
}
.fristCon ul li .imgInfo h2{
    color:#636363;
    width:230px;
    height:35px;
    line-height:35px;
    font-size:14px;
}
.fristCon ul li .imgInfo b{
    display:block;
    float:right;
    height:35px;
    line-height:35px;
    color:#0072bc;
    font-weight:normal;
    cursor:pointer;
}
.fristCon ul li .imgInfo b:hover{
    text-decoration:underline;
}
.fristCon ul li .imgInfo .info .address{
    float:left;
    height:17px;
    line-height:17px;
    text-align:center;
    padding:0px 8px;
    border-radius:10px;
    background:#C9C9C9;
    color:#fff;
}
